[alias]
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
	st = status
	ci = commit
	co = checkout
	br = branch
	df = diff
	glog = log --graph
	dlog = log --decorate
	plog = log -p
	nlog = log --name-status
	d = diff --word-diff --color
	p = pull
	dc = diff --color --cached
	ll = log --pretty=oneline --abbrev-commit --max-count=15
	review = log -p --max-count=1
    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset<%an>' --abbrev-commit --date=relative --max-count=20
	save = stash save
    last = log --max-count=1 --stat
	files = log --name-only
	fs = log --name-only --oneline[color]
	# unstages a file. use like 'git unstage filename'
	unstage = reset HEAD --
	# resets all uncomitted changes and files
	abort = reset --hard HEAD
	# shows diff only for files staged to commit
	new = diff --cached
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[core]
	editor = vim
